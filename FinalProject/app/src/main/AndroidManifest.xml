<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.samratalshahriar.nayeem.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/appicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreen"
            android:label="SAS APP"
            android:screenOrientation="userPortrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/dashboard"
            android:screenOrientation="userPortrait"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/login"
            android:screenOrientation="userPortrait">
        </activity>
        <activity
            android:name=".AddEmployeeActivity"
            android:label="Add Employee Information"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/signup"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".ReadNewsActivity"
            android:label="News Headlines"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".EmployeeManagementActivity"
            android:label="Employee Management"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".ManageEmployee"
            android:label="Manage Employee"
            android:screenOrientation="userPortrait"></activity>
        <activity
            android:name=".CheckWeatherActivity"
            android:label="Weather Now"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".ReadNewsWebviewActivity"
            android:label="Read Newspaper"
            android:screenOrientation="userPortrait" />

    </application>

</manifest>