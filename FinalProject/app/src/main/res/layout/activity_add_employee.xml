<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_emp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.NavigationView
        android:id="@+id/navViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navmenu"
        android:background="#c6c5c5"
        app:headerLayout="@layout/navmenuheader"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ade"
    tools:context=".AddEmployeeActivity">

    <TextView
        android:id="@+id/tvAddEmpInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="3"
        android:padding="2dp"
        android:text="ADD EMPLOYEE\nINFORMATION\n================================="
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAddEmpName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etAddEmpName"
        android:layout_below="@+id/tvAddEmpInfo"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/textback"
        android:paddingLeft="2dp"
        android:fontFamily="serif-monospace"
        android:paddingTop="10dp"
        android:text="Name"
        android:textColor="#00ff2a"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etAddEmpName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvAddEmpInfo"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/tvAddEmpName"
        android:paddingLeft="5dp"
        android:maxLines="1"
        android:background="@drawable/inputbox"
        android:hint="Enter employee name"
        android:textColorHint="#ffffff"
        android:paddingRight="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDepartment"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etDepartment"
        android:layout_below="@+id/tvAddEmpName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/textback"
        android:paddingLeft="2dp"
        android:fontFamily="serif-monospace"
        android:paddingTop="10dp"
        android:text="Department"
        android:textColor="#00ff2a"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etDepartment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etAddEmpName"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tvDepartment"
        android:paddingLeft="5dp"
        android:maxLines="1"
        android:textColorHint="#ffffff"
        android:background="@drawable/inputbox"
        android:hint="Enter employee department"
        android:paddingRight="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDesignation"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etDesignation"
        android:layout_below="@+id/tvDepartment"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/textback"
        android:paddingLeft="2dp"
        android:fontFamily="serif-monospace"
        android:paddingTop="10dp"
        android:text="Designation"
        android:textColor="#00ff2a"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etDesignation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etDepartment"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tvDesignation"
        android:paddingLeft="5dp"
        android:textColorHint="#ffffff"
        android:maxLines="1"
        android:background="@drawable/inputbox"
        android:hint="Enter employee designaton"
        android:paddingRight="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvEmpEmil"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etEmpEmail"
        android:layout_below="@+id/tvDesignation"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/textback"
        android:paddingLeft="2dp"
        android:fontFamily="serif-monospace"
        android:paddingTop="10dp"
        android:text="Email"
        android:textColor="#00ff2a"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etEmpEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etDesignation"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tvDesignation"
        android:paddingLeft="5dp"
        android:maxLines="1"
        android:textColorHint="#ffffff"
        android:background="@drawable/inputbox"
        android:hint="Enter employee email"
        android:paddingRight="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvEmpPhone"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etEmpPhone"
        android:layout_below="@+id/tvEmpEmil"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/textback"
        android:paddingLeft="2dp"
        android:fontFamily="serif-monospace"
        android:paddingTop="10dp"
        android:text="Phone"
        android:textColor="#00ff2a"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etEmpPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etEmpEmail"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tvEmpPhone"
        android:paddingLeft="5dp"
        android:maxLines="1"
        android:inputType="number"
        android:textColorHint="#ffffff"
        android:background="@drawable/inputbox"
        android:hint="Enter employee phone"
        android:paddingRight="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvEmpSalary"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etEmpSalary"
        android:layout_below="@+id/tvEmpPhone"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/textback"
        android:paddingLeft="2dp"
        android:fontFamily="serif-monospace"
        android:paddingTop="10dp"
        android:text="Salary"
        android:textColor="#00ff2a"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etEmpSalary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etEmpPhone"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tvEmpSalary"
        android:paddingLeft="5dp"
        android:textColorHint="#ffffff"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:background="@drawable/inputbox"
        android:hint="Enter employee salary"
        android:paddingRight="5dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnSaveEmp"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmpSalary"
        android:layout_centerHorizontal="true"
        android:background="@drawable/save"
        />

    <Button
        android:id="@+id/btnResetEmp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/etEmpSalary"
        android:layout_toRightOf="@+id/btnSaveEmp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/resetbutton"
        />

</RelativeLayout>

</android.support.v4.widget.DrawerLayout>